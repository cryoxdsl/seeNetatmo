{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "port": 9003,
      "pathMapping": {
        "/": "${workspaceFolder}/"
      }
    },
    {
      "name": "Launch current script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 9003
    }
  ]
}
